@model CarRentalApp.Models.Car;

@{
    ViewData["Title"] = "Update Car";
}

<div style="margin-top: 4em">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Car: ID @Model.Id</h3>
            <br />
            <form action="@Url.Action("Edit", "Car", new { id = @Model.Id })" method="post">
                <div class="form-group">
                    <label for="brand">Brand:</label>
                    <input type="text" class="form-control" id="brand" name="Brand" value="@Model.Brand" required>
                </div>
                <div class="form-group">
                    <label for="color">Color:</label>
                    <select class="form-control" id="color" name="Color" value="@Model.Color" required>
                        <option value="Black">Black</option>
                        <option value="White">White</option>
                        <option value="Green">Green</option>
                        <option value="Red">Red</option>
                        <option value="Blue">Blue</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="km">Current KM:</label>
                    <input type="text" class="form-control" id="km" name="KM" value="@Model.Km" required>
                </div>
                <div class="form-group">
                    <label for="isAvailable">Availability:</label>
                    <select class="form-control" id="isAvailable" name="isAvailable" value="@Model.isAvailable" required>
                        <option value="@Model.isAvailable" disabled selected hidden>@if (@Model.isAvailable)
                            {
                                <text>✓ Available</text>
                            }
                            else
                            {
                                <text>X not Available</text>
                            }
                        </option>
                       <option value="true">✓ Available</option>
                        <option value="false">X not Available</option>
                    </select>
                </div>
                <br />
                <button type="submit" class="btn btn-success">Save Car</button>
            </form>
        </div>
    </div>
</div>
